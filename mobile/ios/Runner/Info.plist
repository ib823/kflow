<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>KerjaFlow</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>KerjaFlow</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>

	<!-- Firebase Cloud Messaging -->
	<key>FirebaseAppDelegateProxyEnabled</key>
	<false/>

	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
	</array>

	<!-- ============================================================ -->
	<!-- PRIVACY DESCRIPTIONS (Required for App Store)                -->
	<!-- ============================================================ -->

	<!-- Face ID Usage - Required for biometric authentication -->
	<key>NSFaceIDUsageDescription</key>
	<string>KerjaFlow uses Face ID to securely authenticate your identity and provide quick access to sensitive information like payslips and leave balances.</string>

	<!-- Camera Usage - Document scanning, profile photos -->
	<key>NSCameraUsageDescription</key>
	<string>KerjaFlow needs camera access to scan documents (such as work permits and ICs), capture profile photos, and upload employment-related documents.</string>

	<!-- Photo Library Read - Selecting existing photos -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>KerjaFlow needs access to your photo library to select and upload profile pictures, document scans, and other employment-related images.</string>

	<!-- Photo Library Add - Saving payslips and documents -->
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>KerjaFlow needs permission to save downloaded payslips, documents, and receipts to your photo library.</string>

	<!-- Notifications - Push notifications for leave/payslip updates -->
	<key>NSUserNotificationUsageDescription</key>
	<string>KerjaFlow sends notifications for leave request approvals, payslip availability, document expiry reminders, and other important HR updates.</string>

	<!-- Contacts - Optional for emergency contacts -->
	<key>NSContactsUsageDescription</key>
	<string>KerjaFlow can access your contacts to quickly add emergency contact information to your employee profile.</string>

	<!-- Location (if used for clock-in) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>KerjaFlow uses your location to verify clock-in/clock-out at designated work locations, ensuring accurate attendance records.</string>

	<!-- Calendars - Sync leave to calendar -->
	<key>NSCalendarsUsageDescription</key>
	<string>KerjaFlow can sync your approved leave dates to your calendar so you never forget your time off.</string>

	<!-- Local Network - For debugging only (will be removed in production) -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>KerjaFlow may need local network access for debugging and development purposes.</string>

	<!-- Tracking - Required for iOS 14.5+ (we don't track, but declaration is needed) -->
	<key>NSUserTrackingUsageDescription</key>
	<string>KerjaFlow does not track you across apps. This permission is requested only to comply with App Store requirements.</string>

	<!-- Keychain Sharing -->
	<key>keychain-access-groups</key>
	<array>
		<string>$(AppIdentifierPrefix)my.kerjaflow.app</string>
	</array>

	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
		</dict>
	</dict>

	<!-- URL Schemes for Deep Linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>my.kerjaflow.app</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>kerjaflow</string>
			</array>
		</dict>
	</array>

	<!-- Universal Links -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:kerjaflow.my</string>
		<string>applinks:*.kerjaflow.my</string>
	</array>

	<!-- ============================================================ -->
	<!-- LOCALIZATION - 11 languages for 9 ASEAN countries           -->
	<!-- ============================================================ -->
	<key>CFBundleLocalizations</key>
	<array>
		<string>en</string>       <!-- English (default) -->
		<string>ms</string>       <!-- Bahasa Malaysia (MY, BN) -->
		<string>id</string>       <!-- Bahasa Indonesia (ID) -->
		<string>zh-Hans</string>  <!-- Chinese Simplified (SG, MY) -->
		<string>ta</string>       <!-- Tamil (MY, SG) -->
		<string>th</string>       <!-- Thai (TH) -->
		<string>vi</string>       <!-- Vietnamese (VN) -->
		<string>fil</string>      <!-- Filipino/Tagalog (PH) -->
		<string>lo</string>       <!-- Lao (LA) -->
		<string>km</string>       <!-- Khmer (KH) -->
		<string>bn</string>       <!-- Bengali (migrant workers) -->
	</array>

	<!-- Minimum iOS Version -->
	<key>MinimumOSVersion</key>
	<string>13.0</string>
</dict>
</plist>
